<odoo>
    <!-- Inherit the standard partner form -->
    <record id="insurance_management.view_res_partner_insurer_form" model="ir.ui.view">
        <field name="name">res.partner.form.insurer</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <!-- Insert a new tab/page for Insurance settings -->
            <notebook position="inside">
                <page string="Insurance" groups="insurance_management.group_insurance_user">
                    <group>
                        <field name="is_insurer" />
                    </group>
                    <group>
                        <field name="rate_table_ids" nolabel="1">
                            <list editable="bottom">
                                <field name="name" />
                                <field name="plan_code" />
                                <field name="outpatient_limit" />
                                <field name="inpatient_limit" />
                            </list>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>