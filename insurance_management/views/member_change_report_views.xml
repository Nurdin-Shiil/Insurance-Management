<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_member_change_report_wizard" model="ir.ui.view">
        <field name="name">insurance.member.change.report.wizard</field>
        <field name="model">insurance.member.change.report</field>
        <field name="arch" type="xml">
            <form string="Generate Member Change Report">
                <group>
                    <field name="start_date" widget="datetime" />
                    <field name="end_date" widget="datetime" />
                    <field name="policy_id" widget="selection" />
                    <field name="insurer_id" widget="selection" />
                </group>
                <footer>
                    <button name="action_generate_report" type="object" string="Generate Report"
                        class="btn-primary" />
                    <button special="cancel" string="Cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_member_change_report_wizard" model="ir.actions.act_window">
        <field name="name">Member Change Report</field>
        <field name="res_model">insurance.member.change.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_member_change_report"
        name="Member Change Report"
        action="action_member_change_report_wizard"
        parent="menu_insurance_root"
        sequence="20"
        invisible="1"
    />
</odoo>