<odoo>
    <record id="quote_request_wizard_view_form" model="ir.ui.view">
        <field name="name">quote.request.wizard.form</field>
        <field name="model">quote.request.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="lead_id" readonly="1" />
                    <field name="underwriter_ids" widget="many2many_tags"
                        domain="[('is_insurer', '=', True)]" />
                </group>
                <group>
                    <field name="subject" />
                    <field name="body" widget="html" />
                </group>
                <footer>
                    <button name="action_send_emails" string="Send Emails" type="object"
                        class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_quote_request_wizard" model="ir.actions.act_window">
        <field name="name">Send Quote Requests</field>
        <field name="res_model">quote.request.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="quote_request_wizard_view_form" />
    </record>
</odoo>